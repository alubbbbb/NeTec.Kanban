@page
@model LogoutModel
@{
    ViewData["Title"] = "Abmelden";
    Layout = "/Views/Shared/_AuthLayout.cshtml";
}

<div class="text-center">

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        /* FALL 1: USER IST NOCH EINGELOGGT */

        <div class="mb-4">
            <i class="bi bi-question-circle text-warning" style="font-size: 4rem;"></i>
        </div>

        <h2 class="fw-bold mb-3">Abmelden?</h2>
        <p class="text-muted mb-4">
            Du bist aktuell als <strong>@User.Identity.Name</strong> angemeldet.<br />
            Möchtest du die Sitzung beenden?
        </p>

        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Account/Logout", new { area = "Identity" })" method="post">
            <button type="submit" class="btn btn-danger w-100 fw-bold btn-lg shadow-sm">
                <i class="bi bi-power me-2"></i> Jetzt abmelden
            </button>
        </form>
        <div class="mt-3">
            <a asp-area="" asp-controller="Board" asp-action="Index" class="text-decoration-none text-muted small">
                Nein, zurück zum Dashboard
            </a>
        </div>
    }
    else
    {
        /* FALL 2: USER IST ERFOLGREICH AUSGELOGGT */

        <div class="mb-4">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
        </div>

        <h2 class="fw-bold mb-3">Bis bald!</h2>

        <p class="text-muted mb-4">
            Du hast dich erfolgreich abgemeldet.<br />
            Wir hoffen, du warst produktiv!
        </p>

        <div class="d-grid gap-2">
            <a asp-page="./Login" asp-route-returnUrl="/" class="btn btn-primary btn-lg fw-bold shadow-sm">
                Wieder anmelden
            </a>
        </div>
    }
</div>