@model NeTec.Kanban.Domain.Entities.ViewModel.TaskDetailsViewModel

@{
    ViewData["Title"] = Model.Title;

    // Helper für Priority Badge
    var priorityClass = Model.Priority switch
    {
        "High" => "badge-soft-high",
        "Medium" => "badge-soft-medium",
        "Low" => "badge-soft-low",
        _ => "bg-secondary"
    };
}

<div class="container-fluid py-4 ps-lg-5" style="max-width: 1400px;">    <nav aria-label="breadcrumb" class="mb-4">
  <ol class="breadcrumb small">
    <li class="breadcrumb-item"><a href="/Board" class="text-decoration-none text-muted">Boards</a></li>
    <li class="breadcrumb-item"><a class="text-decoration-none text-muted">@Model.Title</a></li>
    <li class="breadcrumb-item active text-dark fw-bold" aria-current="page">TASK-@Model.TaskId</li>
  </ol>
</nav>

    <div class="row">

        <div class="col-lg-8">

            <div class="d-flex justify-content-between align-items-start mb-3">
                <h1 class="fw-bold text-break">@Model.Title</h1>
                <button class="btn btn-outline-secondary btn-edit-task" data-task-id="@Model.TaskId">
                    <i class="bi bi-pencil"></i> Bearbeiten
                </button>
            </div>

            <div class="mb-5">
                <h5 class="fw-bold text-muted mb-3">Beschreibung</h5>
                <div class="p-3 bg-light border rounded" style="min-height: 100px; white-space: pre-wrap;">
                    @if (!string.IsNullOrWhiteSpace(Model.Description))
                    {
                        @Model.Description
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Keine Beschreibung vorhanden.</span>
                    }
                </div>
            </div>

            <div class="mb-4">
                <h5 class="fw-bold text-muted mb-3">
                    <i class="bi bi-chat-left-text"></i> Kommentare (@Model.Comments.Count)
                </h5>

                <div class="comment-list mb-4">
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="d-flex mb-3">
                            <div class="flex-shrink-0">
                                <div class="bg-secondary text-white rounded-circle d-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                                    @comment.UserName.Substring(0, 1).ToUpper()
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <div class="bg-white border rounded p-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <strong class="small">@comment.UserName</strong>
                                        <span class="text-muted small">@comment.CreatedAt.ToString("g")</span>
                                    </div>
                                    <p class="mb-0 text-break">@comment.Text</p>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!Model.Comments.Any())
                    {
                        <p class="text-muted">Noch keine Kommentare.</p>
                    }
                </div>

                <div class="card bg-light border-0">
                    <div class="card-body">
                        <form asp-action="AddComment" asp-controller="Task" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="taskId" value="@Model.TaskId" />

                            <div class="mb-2">
                                <label class="form-label fw-bold small">Kommentar schreiben</label>
                                <textarea name="text" class="form-control" rows="3" placeholder="Was gibt es Neues?" required></textarea>
                            </div>
                            <div class="text-end">
                                <button type="submit" class="btn btn-primary btn-sm">Senden</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-white fw-bold">
                    Details
                </div>
                <div class="card-body">

                    <div class="mb-3">
                        <label class="text-muted small fw-bold d-block">STATUS</label>
                        <span class="badge bg-light text-dark border">@Model.ColumnName</span>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small fw-bold d-block">ZUSTÄNDIG</label>
                        <div class="d-flex align-items-center mt-1">
                            <i class="bi bi-person-circle fs-4 me-2 text-primary"></i>
                            <span>@Model.AssignedUserName</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small fw-bold d-block">PRIORITÄT</label>
                        <span class="badge @priorityClass mt-1">@Model.Priority</span>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small fw-bold d-block">FÄLLIGKEITSDATUM</label>
                        @if (Model.DueDate.HasValue)
                        {
                            var dateColor = Model.DueDate.Value < DateTime.Now ? "text-danger" : "text-dark";
                            <span class="@dateColor mt-1 d-block">
                                <i class="bi bi-calendar-event me-1"></i> @Model.DueDate.Value.ToString("d")
                            </span>
                        }
                        else
                        {
                            <span class="text-muted fst-italic mt-1 d-block">Kein Datum</span>
                        }
                    </div>

                    <hr />

                    <div class="mb-3">
                        <label class="text-muted small fw-bold d-block mb-1">ZEITERFASSUNG</label>
                        @{
                            var planned = Model.PlannedTime ?? 0;
                            var actual = Model.ActualTime ?? 0;
                            // Einfache Progress Bar Berechnung (max 100%)
                            var percent = planned > 0 ? Math.Min((actual / planned) * 100, 100) : 0;
                        }

                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-info" role="progressbar" style="width: @((int)percent)%"></div>
                        </div>
                        <div class="d-flex justify-content-between small mt-1 text-muted">
                            <span>@actual h verbraucht</span>
                            <span>@planned h geplant</span>
                        </div>
                    </div>

                    <hr />

                    <div class="small text-muted">
                        <div>Erstellt: @Model.CreatedAt.ToString("g")</div>
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <div>Aktualisiert: @Model.UpdatedAt.Value.ToString("g")</div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editTaskModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Aufgabe bearbeiten</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editTaskId" />
                <input type="hidden" id="editTaskColumnId" /> <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Titel *</label>
                        <input id="editTaskTitle" class="form-control" maxlength="100" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Priorität</label>
                        <select id="editTaskPriority" class="form-select">
                            <option value="Low">Niedrig</option>
                            <option value="Medium">Mittel</option>
                            <option value="High">Hoch</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <label>Beschreibung</label>
                    <textarea id="editTaskDescription" class="form-control" rows="3"></textarea>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label>Fällig bis</label>
                        <input type="date" id="editTaskDueDate" class="form-control" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Geplante Stunden</label>
                        <input type="number" step="0.1" id="editTaskPlannedTime" class="form-control" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Verbleibende Stunden</label>
                        <input type="number" step="0.1" id="editTaskActualTime" class="form-control" />
                    </div>
                </div>
                <div class="mb-3">
                    <label>Zuständig</label>
                    <select id="editTaskAssignedUser" class="form-select">
                        <option value="">Nicht zugewiesen</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                <button class="btn btn-primary" id="saveTaskChanges">Speichern</button>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <script>
        // --------------------------------------------------------
        // JS FÜR DIE DETAILS SEITE (Minimal-Version)
        // --------------------------------------------------------

        document.addEventListener("DOMContentLoaded", () => {
            loadAssignableUsers();
            initializeTaskEditing();
        });

        // Nutzer laden für Select
        function loadAssignableUsers() {
            fetch('/Task/GetAssignableUsers')
                .then(r => r.json())
                .then(users => {
                    const select = document.getElementById("editTaskAssignedUser");
                    select.innerHTML = '<option value="">Nicht zugewiesen</option>'; // Reset
                    users.forEach(u => {
                        const opt = document.createElement("option");
                        opt.value = u.id;
                        opt.textContent = u.userName;
                        select.appendChild(opt);
                    });
                });
        }

        // Edit Button Logic
        function initializeTaskEditing() {
            const btn = document.querySelector(".btn-edit-task");
            if(!btn) return;

            btn.addEventListener("click", () => {
                const id = btn.dataset.taskId;

                // Daten via AJAX laden, um sicherzugehen, dass wir die aktuellsten haben
                // ODER wir nehmen die Daten direkt aus dem Model, wenn wir AJAX sparen wollen.
                // Der Konsistenz halber nutzen wir deine existierende GetTask Methode:
                fetch('@Url.Action("GetTask", "Task")/' + id)
                    .then(r => r.json())
                    .then(data => {
                        document.getElementById("editTaskId").value = data.id;
                        document.getElementById("editTaskColumnId").value = data.columnId;
                        document.getElementById("editTaskTitle").value = data.title;
                        document.getElementById("editTaskDescription").value = data.description ?? "";
                        document.getElementById("editTaskPriority").value = data.priority ?? "Medium";
                        document.getElementById("editTaskDueDate").value = data.dueDate ?? "";
                        document.getElementById("editTaskPlannedTime").value = data.plannedTime ?? "";
                        document.getElementById("editTaskActualTime").value = data.actualTime ?? "";
                        document.getElementById("editTaskAssignedUser").value = data.assignedUserId ?? "";

                        new bootstrap.Modal(document.getElementById("editTaskModal")).show();
                    })
                    .catch(err => console.error(err));
            });

            // Speichern Logic (identisch zu deinem Kanban Board Skript)
            document.getElementById("saveTaskChanges").addEventListener("click", () => {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const id = document.getElementById("editTaskId").value;

                const payload = {
                    id: parseInt(id),
                    columnId: parseInt(document.getElementById("editTaskColumnId").value),
                    title: document.getElementById("editTaskTitle").value.trim(),
                    description: document.getElementById("editTaskDescription").value.trim() || null,
                    priority: document.getElementById("editTaskPriority").value,
                    dueDate: document.getElementById("editTaskDueDate").value || null,
                    plannedTime: parseFloat(document.getElementById("editTaskPlannedTime").value) || null,
                    actualTime: parseFloat(document.getElementById("editTaskActualTime").value) || null,
                    assignedUserId: document.getElementById("editTaskAssignedUser").value || null
                };

                if (!payload.title) {
                    alert("Titel ist erforderlich");
                    return;
                }

                fetch('@Url.Action("EditTask", "Task")', {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        "RequestVerificationToken": token
                    },
                    body: JSON.stringify(payload)
                })
                .then(r => r.ok ? r.json() : Promise.reject())
                .then(() => {
                    // Seite neu laden um Änderungen zu zeigen
                    location.reload();
                })
                .catch(() => alert("Fehler beim Speichern"));
            });
        }
    </script>
}