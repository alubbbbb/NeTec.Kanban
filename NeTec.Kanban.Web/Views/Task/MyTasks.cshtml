    @model IEnumerable<NeTec.Kanban.Domain.Entities.TaskItem>
@{
    ViewData["Title"] = "Meine Aufgaben";
}

<div class="container-fluid py-4 ps-lg-4">
    <h1 class="fw-bold mb-4">Meine Aufgaben</h1>

    <div class="alert alert-info border-0 shadow-sm">
        <i class="bi bi-info-circle-fill me-2"></i>
        Hier siehst du alle Aufgaben, die dir zugewiesen wurden – auch von Boards anderer Benutzer.
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-check2-circle display-1"></i>
            <p class="mt-3">Alles erledigt! Du hast aktuell keine zugewiesenen Aufgaben.</p>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Aufgabe</th>
                            <th class="py-3">Priorität</th>
                            <th class="py-3">Status</th>
                            <th class="py-3">Board</th>
                            <th class="py-3">Fällig</th>
                            <th class="pe-4 py-3 text-end">Aktion</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var task in Model)
                        {
                            var priorityClass = task.Priority switch
                            {
                                "High" => "badge-soft-high",
                                "Medium" => "badge-soft-medium",
                                "Low" => "badge-soft-low",
                                _ => "bg-secondary"
                            };

                            <tr>
                                <td class="ps-4 fw-bold">@task.Title</td>
                                <td><span class="badge @priorityClass">@task.Priority</span></td>
                                <td><span class="badge bg-light text-dark border">@task.Column?.Titel</span></td>
                                <td>
                                    <div class="small text-muted">@task.Column?.Board?.Titel</div>
                                </td>
                                <td>
                                    @if (task.DueDate.HasValue)
                                    {
                                        var color = task.DueDate < DateTime.Now ? "text-danger fw-bold" : "";
                                        <span class="@color">@task.DueDate.Value.ToShortDateString()</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="pe-4 text-end">
                                    <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">Anzeigen</a>
                                    <a asp-controller="Board" asp-action="Details" asp-route-id="@task.Column?.BoardId" class="btn btn-sm btn-light text-muted" title="Zum Board springen">
                                        <i class="bi bi-kanban"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>