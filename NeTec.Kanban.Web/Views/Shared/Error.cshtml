@model ErrorViewModel
@{
    ViewData["Title"] = "Fehler";
}

<div class="text-center py-5">
    <h1 class="text-danger fw-bold display-4 mb-3">Upps!</h1>
    <h2 class="text-muted h4 mb-4">Ein unerwarteter Fehler ist aufgetreten.</h2>

    @if (Model.ShowRequestId)
    {
        <div class="alert alert-light d-inline-block border shadow-sm">
            <strong>Request ID:</strong> <code class="ms-2">@Model.RequestId</code>
        </div>
        <p class="text-muted small mt-3">
            Bitte geben Sie diese ID an, wenn Sie den Support kontaktieren.
        </p>
    }

    <div class="mt-4">
        <a href="/" class="btn btn-primary px-4">Zurück zur Startseite</a>
    </div>
</div>