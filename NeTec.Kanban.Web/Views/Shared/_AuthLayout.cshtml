<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NeTec Kanban</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NeTec.Kanban.Web.styles.css" asp-append-version="true" />

    <style>
        body.auth-bg {
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .auth-card {
            width: 100%;
            max-width: 420px;
            border: none;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

        .auth-header {
            text-align: center;
            padding-bottom: 1.5rem;
        }

        .auth-logo {
            height: 40px;
            margin-bottom: 1rem;
        }

        .form-floating > .form-control:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
        }

        .btn-primary {
            background-color: #ffc107;
            border-color: #ffc107;
            color: #000;
            font-weight: 600;
        }

            .btn-primary:hover {
                background-color: #e0a800;
                border-color: #d39e00;
            }
    </style>
</head>
<body class="auth-bg">
    <div class="auth-card bg-white p-4 p-md-5">
        <div class="auth-header">
            <a asp-area="" asp-controller="Board" asp-action="Index">
                <img src="~/img/logo.png" alt="NeTec" class="auth-logo" />
            </a>
            <h4 class="fw-bold mt-2">@ViewData["Title"]</h4>
            <p class="text-muted small">NeTec Kanban System</p>
        </div>
        @RenderBody()

        <div class="text-center mt-4 pt-3 border-top">
            <p class="small text-muted mb-0">
                &copy; @DateTime.Now.Year - IHK Abschlussprojekt
            </p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>