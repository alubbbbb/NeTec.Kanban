<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NeTec Kanban</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Toastr CSS für Benachrichtigungen -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <!-- Deine eigene, benutzerdefinierte CSS-Datei -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="navbar navbar-light bg-white border-bottom shadow-sm px-3">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <!-- Logo und Markenname -->
            <a class="navbar-brand d-flex align-items-center" asp-controller="Board" asp-action="Index">
                <img src="~/img/logo.png" alt="NeTec Logo" class="logo-img" />
                <span class="ms-2 fw-semibold text-dark d-none d-sm-inline">NeTec Kanban</span>
            </a>

            <!-- Login/Logout Partial View - Der saubere Weg -->
            <partial name="_LoginPartial" />
        </div>
    </header>

    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar bg-white border-end">
            <div class="p-3">
                <div class="fw-bold fs-5 mb-3">NeTec</div>
                <small class="text-uppercase text-muted fw-semibold ms-1 d-block mb-2" style="font-size:0.75rem;">Navigation</small>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link active" asp-controller="Board" asp-action="Index">Alle Boards</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Index">Benutzerverwaltung</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Settings" asp-action="Index">Einstellungen</a></li>
                </ul>
            </div>
        </nav>

        <!-- Hauptinhaltsbereich -->
        <main class="main-content flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="text-center py-3 mt-auto border-top">
        © @DateTime.Now.Year - NeTec Kanban WebApp
    </footer>

    <!-- ========================= SCRIPTS ========================= -->
    <!-- Wichtige Bibliotheken -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!-- Initialisierung der Toastr-Benachrichtigungen für TempData -->
    <script>
        $(document).ready(function () {
            toastr.options = {
                "positionClass": "toast-bottom-right",
                "preventDuplicates": true,
                "progressBar": true,
                "timeOut": 4000
            };

            var successMessage = '@(TempData["SuccessMessage"] as string)';
            if (successMessage) {
                toastr.success(successMessage);
            }

            var errorMessage = '@(TempData["ErrorMessage"] as string)';
            if (errorMessage) {
                toastr.error(errorMessage);
            }
        });
    </script>

    <!-- Platzhalter für seiten-spezifische Skripte (wie in Index.cshtml) -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>