@model NeTec.Kanban.Domain.Entities.Board
@{
    ViewData["Title"] = Model.Titel;
}

<div class="container-fluid py-4 ps-lg-4">
    @Html.AntiForgeryToken()

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold mb-0">@Model.Titel</h1>
        <div>
            <button class="btn btn-primary shadow-sm" onclick="document.getElementById('addColumnWrapper').classList.remove('d-none')">
                <i class="bi bi-plus-lg"></i> Spalte
            </button>
            <a asp-action="Index" asp-controller="Board" class="btn btn-outline-secondary ms-2">
                Zurück
            </a>
        </div>
    </div>

    <div id="addColumnWrapper" class="d-none mb-4">
        <div class="card shadow-sm border-0" style="width: 300px; border-radius: 12px;">
            <div class="card-body p-3">
                <form asp-action="CreateColumn" asp-controller="Board" method="post">
                    <input type="hidden" name="boardId" value="@Model.Id" />
                    <div class="mb-2">
                        <input type="text" name="title" class="form-control form-control-sm border-0 bg-light fw-bold" placeholder="Spaltenname..." required autofocus />
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-sm btn-link text-muted text-decoration-none" onclick="document.getElementById('addColumnWrapper').classList.add('d-none')">Abbrechen</button>
                        <button type="submit" class="btn btn-sm btn-primary px-3 rounded-pill">OK</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="kanban-columns d-flex gap-3 overflow-auto pb-3">
        @foreach (var column in Model.Columns.OrderBy(c => c.OrderIndex))
        {
            <div class="column flex-shrink-0" style="width: 320px;" data-column-id="@column.Id">

                <div class="d-flex justify-content-between align-items-center bg-white rounded-top p-3 border-bottom shadow-sm mb-2">
                    <div class="d-flex align-items-center gap-2">
                        <h6 class="fw-bold text-uppercase mb-0 text-dark small">@column.Titel</h6>
                        <span class="badge bg-light text-secondary border rounded-pill">@column.Tasks?.Count</span>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-link text-muted p-0" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></button>
                        <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                            <li>
                                <form asp-action="MoveColumn" asp-controller="Board" method="post">
                                    <input type="hidden" name="columnId" value="@column.Id" />
                                    <input type="hidden" name="direction" value="left" />
                                    <button class="dropdown-item small"><i class="bi bi-arrow-left me-2"></i>Nach links</button>
                                </form>
                            </li>
                            <li>
                                <form asp-action="MoveColumn" asp-controller="Board" method="post">
                                    <input type="hidden" name="columnId" value="@column.Id" />
                                    <input type="hidden" name="direction" value="right" />
                                    <button class="dropdown-item small"><i class="bi bi-arrow-right me-2"></i>Nach rechts</button>
                                </form>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-action="DeleteColumn" asp-controller="Board" method="post">
                                    <input type="hidden" name="columnId" value="@column.Id" />
                                    <button class="dropdown-item text-danger small" onclick="return confirm('Löschen?');"><i class="bi bi-trash me-2"></i>Löschen</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="task-list p-2" style="min-height: 50px;">
                    @foreach (var task in column.Tasks.OrderBy(t => t.OrderIndex))
                    {
                        var priorityClass = task.Priority switch { "High" => "badge-soft-high", "Medium" => "badge-soft-medium", "Low" => "badge-soft-low", _ => "bg-secondary" };

                        // Klick auf Karte -> Gehe zu Details (außer man klickt Edit)
                        <div class="card task-card mb-2 border-0 shadow-sm" data-task-id="@task.Id" onclick="if(!event.target.closest('.btn-edit-task')) location.href='@Url.Action("Details", "Task", new { id = task.Id })'">
                            <div class="card-body p-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="card-title fw-bold mb-0 text-dark small">@task.Title</h6>
                                    <button class="btn btn-sm btn-light text-primary btn-edit-task p-1 lh-1" data-task-id="@task.Id"><i class="bi bi-pencil-fill small"></i></button>
                                </div>

                                <div class="d-flex justify-content-between align-items-center pt-2 border-top border-light">
                                    <span class="badge @priorityClass fw-normal py-1 px-2" style="font-size: 0.7rem;">@task.Priority</span>
                                    @if (task.AssignedTo != null)
                                    {
                                        <div class="rounded-circle bg-dark text-white d-flex justify-content-center align-items-center shadow-sm" style="width: 24px; height: 24px; font-size: 10px;" title="@task.AssignedTo.UserName">
                                            @task.AssignedTo.UserName.Substring(0, 1).ToUpper()
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="rounded-circle border d-flex justify-content-center align-items-center text-muted" style="width: 24px; height: 24px; font-size: 10px;"><i class="bi bi-person"></i></div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="p-3">
                    <button class="btn btn-add-task-ghost btn-add-task w-100" data-column-id="@column.Id"><i class="bi bi-plus-lg"></i> Aufgabe</button>
                </div>
            </div>
        }
    </div>
</div>

<partial name="_TaskModal" />

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
    <script>
        // NUR NOCH DRAG & DROP LOGIK HIER
        // Der Rest ist im Partial "_TaskModal"
        document.addEventListener("DOMContentLoaded", () => {
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            document.querySelectorAll(".task-list").forEach(list => {
                new Sortable(list, {
                    group: "kanban", animation: 150, ghostClass: "sortable-ghost",
                    onEnd: evt => {
                        const taskId = evt.item.dataset.taskId;
                        const colId = evt.to.closest('.column').dataset.columnId;
                        const index = Array.from(evt.to.children).indexOf(evt.item);

                        // AJAX Update
                        fetch('@Url.Action("UpdateTaskColumn", "Task")', {
                            method: "POST",
                            headers: { "Content-Type": "application/json", "RequestVerificationToken": token },
                            body: JSON.stringify({ taskId: parseInt(taskId), newColumnId: parseInt(colId), newOrderIndex: index })
                        });

                        // Counter update (simpel)
                        evt.to.closest('.column').querySelector('.badge').innerText = evt.to.children.length;
                        evt.from.closest('.column').querySelector('.badge').innerText = evt.from.children.length;
                    }
                });
            });
        });
    </script>
}