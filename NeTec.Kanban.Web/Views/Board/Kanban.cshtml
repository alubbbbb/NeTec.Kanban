@model NeTec.Kanban.Domain.Entities.Board
@{
    ViewData["Title"] = $"Kanban Board: {Model.Titel}";
}

<!-- Die lokalen <style>-Überschreibungen wurden entfernt. Das Design wird nun zentral über site.css gesteuert. -->

<div class="container-fluid py-4">
    @Html.AntiForgeryToken()

    <!-- Kanban Header -->
    <div class="d-flex justify-content-between align-items-center kanban-header">
        <h1 class="board-title">@Model.Titel</h1>
        <div>
            <button class="btn btn-primary me-2" id="showAddColumnForm">
                <i class="bi bi-plus-lg"></i> Neue Spalte
            </button>
            <a asp-action="Index" asp-controller="Board" class="btn btn-outline-secondary">
                ← Zurück zur Übersicht
            </a>
        </div>
    </div>
    
    <!-- Formular zum Hinzufügen einer neuen Spalte (zuerst versteckt) -->
    <div id="addColumnForm" class="d-none mb-3">
        <div class="card" style="max-width: 400px;">
            <div class="card-body">
                <h6 class="card-title">Neue Spalte erstellen</h6>
                <form id="createColumnForm">
                    <div class="mb-3">
                        <label for="newColumnTitle" class="form-label">Spalten-Name</label>
                        <input type="text" class="form-control" id="newColumnTitle" placeholder="z.B. Review" required maxlength="100">
                    </div>
                    <button type="submit" class="btn btn-primary">Spalte erstellen</button>
                    <button type="button" class="btn btn-link btn-sm" id="cancelAddColumn">Abbrechen</button>
                </form>
            </div>
        </div>
    </div>


    <div class="kanban-columns">
        @if (Model.Columns != null && Model.Columns.Any())
        {
            @foreach (var column in Model.Columns.OrderBy(c => c.OrderIndex))
            {
                <div class="column" data-column-id="@column.Id">
                    <div class="column-title">
                        @column.Titel
                        <span class="badge bg-secondary rounded-pill ms-2">@(column.Tasks?.Count ?? 0)</span>
                    </div>

                    <div class="task-list" data-column-id="@column.Id">
                        @if (column.Tasks != null)
                        {
                            @foreach (var task in column.Tasks.OrderBy(t => t.OrderIndex))
                            {
                                <div class="card task-card" data-task-id="@task.Id">
                                    <div class="card-body p-0">
                                        <h5 class="card-title fs-6 mb-2">@task.Title</h5>
                                        @if (!string.IsNullOrEmpty(task.Description))
                                        {
                                            <p class="card-text small text-muted">@task.Description</p>
                                        }
                                        @{
                                            var priorityClass = task.Priority switch
                                            {
                                                "High" => "bg-danger",
                                                "Medium" => "bg-warning text-dark",
                                                "Low" => "bg-success",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @priorityClass">@task.Priority</span>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <div class="column-footer p-2">
                        <form class="add-task-form d-none" data-column-id="@column.Id">
                            <textarea class="form-control form-control-sm mb-2" rows="2" placeholder="Titel der neuen Aufgabe..." required></textarea>
                            <button type="submit" class="btn btn-primary btn-sm">Hinzufügen</button>
                            <button type="button" class="btn btn-link btn-sm cancel-add-task">Abbrechen</button>
                        </form>
                        <button class="btn btn-sm btn-secondary show-add-task-form">
                            <i class="bi bi-plus"></i> Aufgabe hinzufügen
                        </button>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
    <script>
        // Der JavaScript-Code bleibt unverändert.
        document.addEventListener('DOMContentLoaded', function () {
            initializeSortable();
            initializeTaskCreation();
            initializeColumnCreation();

            function initializeSortable() {
                document.querySelectorAll('.task-list').forEach(column => {
                    new Sortable(column, {
                        group: 'kanban-tasks',
                        animation: 150,
                        handle: '.task-card',
                        ghostClass: 'sortable-ghost',
                                onEnd: function (evt) {
            const taskId = evt.item.dataset.taskId;
            const newColumnId = evt.to.dataset.columnId;

            // Server aktualisieren
            updateTaskColumn(taskId, newColumnId);

            // Zähler dynamisch updaten (clientseitig)
            updateColumnCounters();
        }

                    });
                });
            }

                    function updateColumnCounters() {
            document.querySelectorAll('.column').forEach(col => {
                const taskCount = col.querySelectorAll('.task-card').length;
                const badge = col.querySelector('.badge.rounded-pill');
                if (badge) badge.textContent = taskCount;
            });
        }


            function initializeTaskCreation() {
                document.querySelectorAll('.show-add-task-form').forEach(btn => {
                    btn.addEventListener('click', () => {
                        btn.classList.add('d-none');
                        const footer = btn.closest('.column-footer');
                        footer.querySelector('.add-task-form').classList.remove('d-none');
                        footer.querySelector('textarea').focus();
                    });
                });

                document.querySelectorAll('.cancel-add-task').forEach(btn => {
                    btn.addEventListener('click', () => {
                        const footer = btn.closest('.column-footer');
                        footer.querySelector('.add-task-form').classList.add('d-none');
                        footer.querySelector('.show-add-task-form').classList.remove('d-none');
                        footer.querySelector('textarea').value = '';
                    });
                });

                document.querySelectorAll('.add-task-form').forEach(form => {
                    form.addEventListener('submit', function (event) {
                        event.preventDefault();
                        const textarea = form.querySelector('textarea');
                        const title = textarea.value.trim();
                        const columnId = form.dataset.columnId;

                        if (title) {
                            createTask(title, columnId);
                        }
                    });
                });
            }

            function initializeColumnCreation() {
                document.getElementById('showAddColumnForm').addEventListener('click', function() {
                    this.classList.add('d-none'); // Button verstecken
                    document.getElementById('addColumnForm').classList.remove('d-none');
                    document.getElementById('newColumnTitle').focus();
                });

                document.getElementById('cancelAddColumn').addEventListener('click', function() {
                    document.getElementById('addColumnForm').classList.add('d-none');
                    document.getElementById('showAddColumnForm').classList.remove('d-none'); // Button wieder zeigen
                    document.getElementById('newColumnTitle').value = '';
                });
                    
                document.getElementById('createColumnForm').addEventListener('submit', function(event) {
                    event.preventDefault();
                    const title = document.getElementById('newColumnTitle').value.trim();
                    if (title) {
                        createColumn(title);
                    }
                });
            }

            function updateTaskColumn(taskId, newColumnId) {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                fetch('@Url.Action("UpdateTaskColumn", "Task")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({ taskId: parseInt(taskId), newColumnId: parseInt(newColumnId) })
                })
                .then(response => {
                    if (!response.ok) {
                        toastr.error('Änderung konnte nicht gespeichert werden.');
                        // Optional: UI zurücksetzen, aber ein Reload ist sicherer
                        location.reload();
                    } else {
                        // Optional: Visuelles Feedback geben, ohne Reload
                        // z.B. Spaltenzähler aktualisieren
                    }
                })
                .catch(error => {
                    console.error('Fehler:', error);
                    toastr.error('Ein Netzwerkfehler ist aufgetreten.');
                    location.reload();
                });
            }

           function createTask(title, columnId) {
    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

    fetch('@Url.Action("Create", "Task")', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'RequestVerificationToken': token
        },
        body: JSON.stringify({
            title: title,
            columnId: columnId
        })
    })
    .then(response => {
        if (!response.ok) throw new Error(response.status);
        return response.json();
    })
    .then(data => {
        console.log("Task erstellt:", data);
        location.reload();
    })
    .catch(error => {
        console.error("Fehler beim Erstellen:", error);
        toastr.error('Aufgabe konnte nicht erstellt werden.');
    });
}



            function createColumn(title) {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const formData = new FormData();
                formData.append('boardId', @Model.Id);
                formData.append('title', title);
                formData.append('__RequestVerificationToken', token);

                fetch('@Url.Action("CreateColumn", "Board")', {
                    method: 'POST',
                    body: formData
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        toastr.error('Spalte konnte nicht erstellt werden.');
                    }
                })
                .catch(error => {
                    console.error('Fehler:', error);
                    toastr.error('Spalte konnte nicht erstellt werden.');
                });
            }
        });
    </script>
}