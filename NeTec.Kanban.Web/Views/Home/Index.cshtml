@model IEnumerable<NeTec.Kanban.Domain.Entities.Board>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
<style>
    body {
        background: #f4f5f7;
    }

    .sidebar {
        width: 220px;
    }

    .thead-clean th {
        background: #fff !important;
        border-bottom: 1px solid #dee2e6;
        font-weight: 600;
    }

    .main-white {
        background: #fff;
    }
</style>

<div class="container-fluid">
    <div class="row g-0 flex-nowrap">
        <!-- Sidebar -->
        <aside class="col-auto sidebar bg-light border-end min-vh-100 d-none d-md-block">
            <div class="p-3">
                <div class="text-uppercase small text-secondary mb-2">Navigation</div>
                <nav class="nav nav-pills flex-column">
                    <a class="nav-link active d-flex align-items-center gap-2" href="#" aria-current="page">
                        <i class="bi bi-kanban"></i><span>Alle Boards</span>
                    </a>
                </nav>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="col d-flex flex-column min-vh-100 main-white ps-0">
            <!-- Topbar -->
            <div class="bg-white border-bottom">
                <div class="d-flex justify-content-between align-items-center py-3 ps-3 pe-3 pe-lg-4">
                    <h1 class="h5 mb-0">Alle Boards</h1>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-lg me-1"></i> Board erstellen
                    </a>
                </div>
            </div>
            <!-- Searchbar -->
            <div class="ps-3 pe-3 pe-lg-4 pt-3">
                <div class="d-flex justify-content-end align-items-center gap-2">
                    <form class="input-group input-group-sm" method="get" style="max-width:280px;">
                        <input type="search" name="q" class="form-control" placeholder="Ein Board suchen" />
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </div>
            </div>
            <!-- Boards Table -->
            <div class="ps-3 pe-3 pe-lg-4 pb-3">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm align-middle mb-0">
                            <thead class="thead-clean">
                                <tr>
                                    <th>Board-Name</th>
                                    <th class="text-end" style="width:1px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var board in Model)
                                {
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Details", "Board", new { id = board.Id })" class="fw-semibold text-decoration-none">
                                                @board.Titel
                                            </a>
                                            @if (!string.IsNullOrWhiteSpace(board.Description))
                                            {
                                                <div class="text-secondary small">@board.Description</div>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="dropdown">
                                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle"
                                                        type="button"
                                                        id="dropdownMenuButton-@board.Id"
                                                        data-bs-toggle="dropdown"
                                                        aria-expanded="false"
                                                        aria-label="Mehr Aktionen">
                                                    <i class="bi bi-three-dots"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton-@board.Id">
                                                    <li>
                                                        <a class="dropdown-item" href="@Url.Action("Edit", "Board", new { id = board.Id })">
                                                            <i class="bi bi-pencil me-2"></i> Bearbeiten
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item text-danger" href="@Url.Action("Delete", "Board", new { id = board.Id })">
                                                            <i class="bi bi-trash me-2"></i> Löschen
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-4 text-center text-secondary">
                        Keine Boards vorhanden. <a href="@Url.Action("Create", "Board")" class="link-primary">Jetzt erstellen</a>.
                    </div>
                }
            </div>
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>